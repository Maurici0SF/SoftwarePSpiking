                Stroke="Blue"
                X1="0"
                X2="10"
                Y1="50"
                Y2="20" />
            <Line
                Stroke="Red"
                X1="20"
                X2="10"
                Y1="50"
                Y2="20" />
            <Line
                Stroke="Green"
                X1="20"
                X2="30"
                Y1="50"
                Y2="20" />
            <Line
                Stroke="Pink"
                X1="40"
                X2="30"
                Y1="50"
                Y2="20"
                />-->
        </Canvas>
        <Button
            x:Name="BotonPopUp"
            Grid.Row="1"
            Grid.Column="0"
            Width="100"
            Height="50"
            Click="BotonPopUp_Click"
            Content="Spikes"
            FontSize="20" />

    </Grid>
</Window>
